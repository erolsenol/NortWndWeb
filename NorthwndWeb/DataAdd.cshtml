<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="signin.css" rel="stylesheet">
</head>
<body>
    @{ 
        NorthwndWeb.DataContext db = new NorthwndWeb.DataContext();
        NorthwndWeb.Entities.MovieLanguage movLang = new NorthwndWeb.Entities.MovieLanguage();
        NorthwndWeb.Entities.MovieType movType = new NorthwndWeb.Entities.MovieType();
        NorthwndWeb.Entities.Director director = new NorthwndWeb.Entities.Director();

    }
    <div class="container">
        <div class="row">
            <div class="col-xs-9 col-md-6">
                <h1>Dil Ekle</h1>
            </div>
            <div class="col-xs-9 col-md-6">
                <h1>Tür Ekle</h1>
            </div>
            <!-- @@@@@@ Dil Ekle @@@@@@ -->
            <form class="form-horizonta" method="post" action="~/Post/MovieLanguageAddPost.cshtml">
                <div class="col-xs-9 col-md-6">
                    <div class="form-group">
                        <label for="filmDil">Film Dili Ekle</label>
                        <input type="text" class="form-control" id="filmDil" name="filmDil">
                    </div>
                    <button type="submit" class="btn btn-default" name="filmDilEkle">Dil Gönder Gelsin</button>
                </div>
            </form>
            <!-- @@@@@@ Tür Ekle @@@@@@ -->
            <form class="form-horizonta" method="post" action="~/Post/MovieTypeAddPost.cshtml">
                <div class="col-xs-9 col-md-6">
                    <div class="form-group">
                        <label for="filmTip">Film Türü Ekle</label>
                        <input type="text" class="form-control" id="filmTip" name="filmTip">
                    </div>
                    <button type="submit" class="btn btn-default" name="filmTipEkle">Tür Gönder Gelsin</button>
                </div>
            </form>
            <div class="col-xs-9 col-md-6">
                <h1>Yönetmen Ekle</h1>
            </div>
            <div class="col-xs-9 col-md-6">
                <h1>Dizi Ekle</h1>
            </div>
            <!-- @@@@@@ Yönetmen @@@@@@ -->
            <form class="form-horizonta" method="post" action="~/Post/DirectorAddPost.cshtml">
                <div class="col-xs-9 col-md-6">
                    <div class="form-group">
                        <label for="yonetmenAdi">Yönetmen Ekle</label>
                        <input  type="text" class="form-control" id="yonetmenAdi" name="yonetmenAdi">
                    </div>
                    <button id="btn-yonetmen" type="submit" class="btn btn-default" name="yonetmenEkle">Yönetmen Gönder Gelsin</button>
                </div>
                <div class="col-xs-9 col-md-6">

                </div>
            </form>
        </div>
    </div>
    
    @*<form class="form-horizonta" method="post" action="~/MovieLanguageAddPost.cshtml">
        <div class="container">
            <div class="form-group">
                <label for="filmDil">Film Dili Ekle</label>
                <input type="text" class="form-control" id="filmDil" name="filmDil">
            </div>
            <button type="submit" class="btn btn-default" name="filmDilEkle">Gönder Gelsin</button>
        </div>
    </form>*@
    @{
        string yonetmenA;
    }
    <script>
        $("#btn-yonetmen").on("click", function () {
            
            yonetmenA = document.getElementById("yonetmenAdi").value;
            @{
                director.directorName = yonetmenA;
                db.Directors.Add(director);
                db.SaveChanges();
            }
        });
        
    </script>
</body>
</html>
